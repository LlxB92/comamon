                <div class="row">
                    <div class="col-4" t-if="o.b92_digital_signature">
                        <h3>Firma Digital</h3>
                        <img t-attf-src="data:image/*;base64,{{o.b92_digital_signature}}"/>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
